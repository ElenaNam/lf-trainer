.main
	&__title
		text-align center

.object
	border 1px solid red

	&__wrapper
		margin 0 auto
		border 1px solid //временно
		width 250px //временно
		height 250px //временно
		max-width: 250px
		max-height: 250px

.variables
	border 1px solid blue
	padding 50px 0

	&__wrapper
		display flex
		justify-content space-between
		align-items center

	&__item
		border 1px solid green
		flex-basis: calc(100%/3 - 50px)


@media screen and (max-width: 768px)
	.variables__wrapper
		flex-direction: column
	.variables__item
		width: 100%
		max-width 400px
		margin-bottom 50px
