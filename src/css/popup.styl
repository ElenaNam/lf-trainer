.popup
	display none
	visibility hidden
	position absolute
	top 0
	right 0
	bottom 0
	left 0
	margin auto
	padding 15px
	max-width 480px
	//max-height: 400px
	width 100%
	//height: 100%
	//height: auto
	overflow-y:  auto


	&__inner
		background: #000
		border-radius: 15px
		box-shadow: 1px 2px 20px rgba(0,0,0,.8)
		padding 15px


	.message
		position relative
		text-align: center
		color #e95604
		font-size: 1.2rem
		line-height: 1.5rem

	.close
		position absolute
		right 15px
		top 0
		display block
		width 25px
		height 25px
		/* border 1px solid white */
		text-align: right

		//&__wrapper
			//position relative

		span
			display block
			width 100%
			color #fff
			cursor pointer
			//border 1px solid wheat

		/* 	&:first-of-type
				transform rotate(45deg)
			&:last-of-type
				transform rotate(-45deg) */
@media screen and (max-width: 768px)
	.popup
		//max-height: auto
		top 50px
		bottom auto
		.message p:first-of-type
			max-width 75%
			margin 0 auto

@media screen and (max-width: 480px)
	.popup
		max-width 90%

		&__inner
			padding 20px


