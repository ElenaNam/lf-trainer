*
	-webkit-tap-highlight-color: rgba(0, 0, 0, 0)
h1
	font-size: 2rem
	line-height: 1
h2
	font-size: 1.8rem

h4
	font-size: 1.6rem

.container
	width 100%
	max-width: 1140px
	padding 0 15px
	margin 0 auto

.overlay
	position fixed
	top 0
	left: 0
	width 100%
	height 100%
	background:rgba(0, 0, 0, 0.8)
	backdrop-filter: blur(5px)
	cursor pointer

.hide
	display none
	visibility hidden
.show
	display block !important
	visibility visible !important

.modal-open
	height: 100%;
	width: 100%;
	position fixed
	overflow hidden

@media screen and (max-width: 1200px)
	.container
		padding: 0
		max-width 90%

@media screen and (max-width: 768px)
	h1
		font-size: 2.2rem
	h2
		font-size: 1.6rem
	h4
		font-size: 1.2rem
		//margin: .5rem 0

@media screen and (max-width: 480px)
	h1
		font-size: 2rem

	h2
		font-size: 1.6rem
		margin 1rem



